            </Button.ContentTemplate>
        </Button>

        <Button Content="9" Grid.Column="2" Grid.Row="4" FontSize="50" Margin="5" Click="AnyadirNumero" Tag="9">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock>9</TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <Button Content="0" Grid.ColumnSpan="3" Grid.Row="6" Grid.RowSpan="1" FontSize="50" Margin="5" Click="AnyadirNumero" Tag="0">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock>0</TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>


    </Grid>
</Window>
